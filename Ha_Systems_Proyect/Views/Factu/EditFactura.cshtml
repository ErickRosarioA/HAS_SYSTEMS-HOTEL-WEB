@model Ha_Systems_Proyect.Models.FACTURA

@{
    ViewBag.Title = "EditFactura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="sectionFormL" style="width:40% !important; padding:1%; position:center; float:none; margin:auto;">
        <h4 style="text-align:center; font-weight:bold;">Editar Datos de Factura</h4>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Codigo)


        <div class="col-md-6" style="margin-top:20px;">
            @Html.LabelFor(model => model.Code_Factura)
            @Html.EditorFor(model => model.Code_Factura, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.Code_Factura, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6" style="margin-top:20px;">
            @Html.LabelFor(model => model.Cliente)
            @Html.EditorFor(model => model.Cliente, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.Cliente, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6" style="margin-top:20px;">
            @Html.LabelFor(model => model.Cedula_Cliente)
            @Html.EditorFor(model => model.Cedula_Cliente, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.Cedula_Cliente, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6" style="margin-top:20px;">
            @Html.LabelFor(model => model.Habitacion)
            @Html.EditorFor(model => model.Habitacion, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.Habitacion, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-10" style="margin-top:20px;">
            @Html.DropDownList("Hospedaje_fk", (SelectList)ViewData["Data_Hospe"], htmlAttributes: new { @id = "Hospedaje_fk", @class = "form-control", @readonly = true })
        </div>

        <div class="col-md-6" style="margin-top:20px;">
            <label>Motivo Factura</label>
            <select id="Motivo" name="Motivo" class="form-control" >
                <option value=null>Seleccionar</option>
                <option value="Habitacion">Habitacion</option>
                <option value="Desayuno">Desayuno</option>
                <option value="Bebida">Bebida</option>
                <option value="Almuerzo">Almuerzo</option>
                <option value="Cena">Cena</option>
                <option value="Diversion">Diversion</option>
            </select>
        </div>
        <div class="col-md-6" style="margin-top:20px;">
            @Html.LabelFor(model => model.Fecha_Creacion)
            @Html.EditorFor(model => model.Fecha_Creacion, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.Fecha_Creacion, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6" style="margin-top:20px;">
            @Html.LabelFor(model => model.Total)
            @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
        </div>


    </div>
            <div style="margin-top:20px;" class="form-group">
                <div style=" text-align:center; display:block; ">
                    <input type="submit" value="Modificar" style="width:27%;" class="btn btn-primary" />
                    <input type="reset" value="Limpiar Todo" style="width:27%;" class="btn btn-danger" />
                    <input type="button" onclick="location.href='@Url.Action("Facturacion")';return false;" value="Regresar" style="width:27%;" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
